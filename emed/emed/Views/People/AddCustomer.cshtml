@model emed.Models.User

@{
    ViewBag.Title = "AddCustomer";
}

<h2>AddCustomer</h2>
@using (Html.BeginForm("AddCustomer", "People", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="wrap-input100 validate-input" data-validate="Enter Valid Name .Use Alphabets Only.">


        @Html.LabelFor(model => model.Customer_Name, htmlAttributes: new { @class = "input100" })
        @Html.TextBoxFor(model => model.Customer_Name, new { htmlAttributes = new { @class = "input100" }, style = "background-color: #32c69a; color: white" })
        <span class="focus-input100" data-placeholder="&#xf207;"></span>
    </div>
    <div class="wrap-input100 validate-input" data-validate="Enter Valid Name .Use Alphabets Only.">


        @Html.LabelFor(model => model.ContactNO, htmlAttributes: new { @class = "input100" })
