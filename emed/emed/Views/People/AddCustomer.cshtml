        @Html.TextBoxFor(model => model.Date, new { htmlAttributes = new { @class = "input100" }, style = "background-color: #32c69a; color: white" })
        <span class="focus-input100" data-placeholder="&#xf207;"></span>
    </div>
    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            SignUP
