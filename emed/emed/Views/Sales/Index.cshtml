            <div style="color:black">
                <div style="padding-top:200px; background-color: #c5f7e8;color:black">
                    <div style="color:black">

                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NoOfItem)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.Label("Customer Name")
                                </th>
                                <th>
                                    @Html.Label("Medicine")
                                </th>
                                <th>
                                    @Html.Label("Potency mg")
                                </th>
                                <th>
                                    @Html.Label("Sold By")
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoOfItem)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer.Customer_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MedicinePotency.Medicine.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MedicinePotency.Potency.Potency_mg)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Staff.Person.FirstName)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Sold_Id }) |
                                        
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Sold_Id })
                                    </td>
                                </tr>
                            }

                        </table>
                        <div class="button about_button ml-auto mr-auto">


                            <a class="nav-link" style="color:white" href="~/Sales/Create">Add </a>

